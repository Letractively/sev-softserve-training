@model OrderSystem.Models.Users
@{
    ViewBag.Title = "Edit User";
    ViewBag.Message = "This page is appointed for editing user for particular role"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> regions = new List<SelectListItem>();
    SelectListItem northRegion = new SelectListItem();
    northRegion.Text = "North";
    northRegion.Value = "North";
    regions.Add(northRegion);
    SelectListItem southRegion = new SelectListItem();
    southRegion.Text = "South";
    southRegion.Value = "South";
    regions.Add(southRegion);
    SelectListItem westRegion = new SelectListItem();
    westRegion.Text = "West";
    westRegion.Value = "West";
    regions.Add(westRegion);
    SelectListItem eastRegion = new SelectListItem();
    eastRegion.Text = "East";
    eastRegion.Value = "East";
    regions.Add(eastRegion);
}

<h2>@ViewBag.Title</h2>
<p>@ViewBag.Message</p>

@using (Html.BeginForm())
{
    <fieldset>
        @Html.HiddenFor(model => model.UserID)
        @Html.HiddenFor(model => model.Rank)
        @Html.HiddenFor(model => model.RankType)

        <div class="editor-label">
            @Html.LabelFor(model => model.Login)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Login)
            @Html.ValidationMessageFor(model => model.Login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserFName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserFName)
            @Html.ValidationMessageFor(model => model.UserFName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserLName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserLName)
            @Html.ValidationMessageFor(model => model.UserLName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Mail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Mail)
            @Html.ValidationMessageFor(model => model.Mail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Region)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Region, regions)
        </div>
        
        <div class="radio-button-list-label">
            @Html.LabelFor(model => model.Role)
        </div>
        <div class="radio-button-list">                     
            @Html.RadioButtonFor(model => model.Role, "Administrator") Administrator <br />
            @Html.RadioButtonFor(model => model.Role, "Merchandiser") Merchandiser <br />
            @Html.RadioButtonFor(model => model.Role, "Supervisor") Supervisor <br />
            @Html.RadioButtonFor(model => model.Role, "Customer") Customer
        </div>

        <p>
            <input type="submit" value="Update" name="submit" />
            <input type="button" onclick = "document.location.href = '@Url.Action("Index", "OrderSystemUser")'" value="Cancel" class="cancel" />
            <button type="reset" value="Refresh">Refresh</button>
        </p>
    </fieldset>

}